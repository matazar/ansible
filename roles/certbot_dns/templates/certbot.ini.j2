# Target DNS server
dns_rfc2136_server = "{{ nameservers[nameservers | first].ipv4 }}"
# Target DNS port
dns_rfc2136_port = 53
# TSIG key name
dns_rfc2136_name = "{{ certbot_key_file | regex_search('key \"(.+\\.)\" {',  '\\1') | first }}"
# TSIG key secret
dns_rfc2136_secret = "{{ certbot_key_file | regex_search('secret \"(.+)\";',  '\\1') | first }}"
# TSIG key algorithm
dns_rfc2136_algorithm = {{ certbot_key_file | regex_search('algorithm (.+);',  '\\1') | first | upper }}