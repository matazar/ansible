server_host     = {{ ldap_scheme }}://{{ ldap_server }}
version         = 3
bind            = yes
bind_dn   	    = {{ ldap_admin }}
bind_pw         = {{ ldap_pw }}
search_base     = o=domains,{{ ldap_suffix }}
scope           = sub
query_filter    = (&(objectClass=mailUser)(|(mail=%s)(shadowAddress=%s)))
result_attribute= mail
debuglevel      = 0
