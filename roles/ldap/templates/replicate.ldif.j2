dn: olcDatabase={1}mdb,cn=config
changetype: modify
add: olcSyncRepl
{% for host in ldap_repl_hosts %}
{% if host != ldap_hostname %}
olcSyncRepl:
    rid={{ "%03d" | format(ldap_repl_hosts[host]['id']) }}
    provider={{ ldap_replication_schema }}://{{ host }}
    bindmethod=simple
    binddn={{ ldap_repl_user }}
    credentials={{ ldap_repl_pw }}
    searchbase="{{ ldap_suffix }}"
    type=refreshAndPersist
    retry="5 5 300 5"
    timeout=1
    interval=00:00:15:00
{% endif %}
{% endfor %}
-
add: olcMirrorMode
olcMirrorMode: TRUE
