server {
    # HTTPS configuration
    listen {{ ansible_host }}:443 ssl http2;
{% if roundcube_ipv6 %}
    listen {{ roundcube_ipv6 | ipwrap }}:443  ssl http2;
{% endif %}
    server_name {{ roundcube_hostname }}{% if roundcube_extra_hostnames != [] %}{% for hostname in roundcube_hostnames %} {{ hostname }}{% endfor %}{% endif %};
    root    /var/www/roundcube;
    index   index.php;
    charset         utf-8;

    # SSL certificate
    ssl_certificate     /etc/letsencrypt/live/{{ roundcube_cert_name  }}/fullchain.pem;
    ssl_certificate_key     /etc/letsencrypt/live/{{ roundcube_cert_name  }}/privkey.pem;

    # SSL cipher configuration
    ssl_protocols TLSv1.3 TLSv1.2;
    ssl_prefer_server_ciphers on;
    ssl_ecdh_curve secp521r1:secp384r1;
    ssl_ciphers 'ECDHE-ECDSA-AES256-GCM-SHA384:ECDHE-RSA-AES256-GCM-SHA384:ECDHE-ECDSA-CHACHA20-POLY1305:ECDHE-RSA-CHACHA20-POLY1305:ECDHE-ECDSA-AES128-GCM-SHA256:ECDHE-RSA-AES128-GCM-SHA256:ECDHE-ECDSA-AES256-SHA384:ECDHE-RSA-AES256-SHA384:ECDHE-ECDSA-AES128-SHA256:ECDHE-RSA-AES128-SHA256';
    ssl_dhparam /etc/nginx/ssl/dhparam.pem;
    ssl_session_timeout       10m;

    resolver 8.8.8.8 valid=3600s; 
    resolver_timeout 5s;

    # HSTS and other security Headers
    add_header Referrer-Policy “no-referrer-when-downgrade”;
    add_header Strict-Transport-Security max-age=15768000;
    add_header X-Content-Type-Options nosniff;
    add_header X-Download-Options noopen;
    add_header X-Permitted-Cross-Domain-Policies none;
    add_header X-Robots-Tag none;
    add_header X-XSS-Protection "1; mode=block";

    # OCSP Stapling
    ssl_stapling on;
    ssl_stapling_verify on;

    # Verify chain of trust of OCSP
    ssl_trusted_certificate /etc/letsencrypt/live/{{ roundcube_cert_name  }}/chain.pem;

    # Accept large files
    client_max_body_size 1G;

    # PHP configuration
    location / {
        try_files $uri $uri/ /index.php?$args;
    }
    
    location ~ ^/(README|INSTALL|LICENSE|CHANGELOG|UPGRADING)$ {
      deny all;
    }

    location ~ ^/(bin|SQL|config|temp|logs)/ {
      deny all;
    }

    location ~ \.php$ {
        include fastcgi.conf;
        fastcgi_intercept_errors on;
        fastcgi_pass unix:/var/run/php/{{ php_fpm }}.sock;
    }
}
