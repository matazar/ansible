[postfix]
enabled = true
port     = smtp,submission,smtps
filter   = postfix[mode=aggressive]
logpath  = /var/log/mail.log
logencoding = utf-8
maxretry = 5
bantime = 31556952

[dovecot]
enabled = true
port = imap,imaps
filter = dovecot
logpath = /var/log/mail.log
maxretry  = 5
logencoding = utf-8
bantime = 31556952