server {
    # HTTPS configuration
    listen {{ ansible_host }}:443 ssl http2;
{% if dashy_ipv6 %}
    listen {{ dashy_ipv6 | ansible.utils.ipwrap }}:443  ssl http2;
{% endif %}
    server_name {% for hostname in dashy_hostnames %}{{ hostname }} {% endfor %};
    root    /var/www/dashy/public;
    index   index.php;
    charset         utf-8;

    # SSL certificate
    ssl_certificate     /etc/letsencrypt/live/{{ dashy_cert_name }}/fullchain.pem;
    ssl_certificate_key     /etc/letsencrypt/live/{{ dashy_cert_name }}/privkey.pem;

    # SSL cipher configuration
    ssl_protocols TLSv1.3 TLSv1.2;
    #ssl_prefer_server_ciphers on;
    ssl_dhparam /etc/nginx/ssl/dhparam.pem;
    #ssl_ciphers ECDHE-RSA-AES256-GCM-SHA512:DHE-RSA-AES256-GCM-SHA512:ECDHE-RSA-AES256-GCM-SHA384:DHE-RSA-AES256-GCM-SHA384:ECDHE-RSA-AES256-SHA384;
    ssl_ecdh_curve secp384r1;
    ssl_session_cache         shared:SSL:10m;
    ssl_session_timeout       10m;

    # HSTS and other security Headers
    add_header Referrer-Policy "no-referrer-when-downgrade";
    add_header Strict-Transport-Security max-age=15768000;
    add_header X-Content-Type-Options nosniff;
    add_header X-Download-Options noopen;
    add_header X-Permitted-Cross-Domain-Policies none;
    add_header X-Robots-Tag none;
    add_header X-XSS-Protection "1; mode=block";

    # OCSP Stapling
    ssl_stapling on;
    ssl_stapling_verify on;

    # Verify chain of trust of OCSP
    ssl_trusted_certificate /etc/letsencrypt/live/{{ dashy_cert_name }}/chain.pem;

    # Accept large files
    client_max_body_size 1G;

    location / {
      add_header X-Frame-Options SAMEORIGIN always;
      proxy_pass http://127.0.1.1:4000;
  }
    
    location ~ ^/(README|INSTALL|LICENSE|CHANGELOG|UPGRADING)$ {
      deny all;
    }

    location ~ ^/(bin|SQL|config|temp|logs)/ {
      deny all;
    }
}
