server_host     = {{ ldap_scheme }}://{{ ldap_server }}
tls             = {% if ldap_tls %}yes{% else %}no{% endif %} 
version         = 3
bind            = yes
bind_dn         = {{ ldap_admin }}
bind_pw         = {{ ldap_pw }}
search_base     = o=domains,{{ ldap_suffix }}
scope           = one
query_filter    = (&(objectClass=mailDomain)(|(domainName=%s)(&(domainAliasName=%s)))(!(domainBackupMX=yes)))
result_attribute= domainName
debuglevel      = 0
